---
import type { MarkdownLayoutProps } from 'astro';
import BaseLayout from '../layouts/BaseLayout.astro';

// https://docs.astro.build/en/basics/layouts/#markdown-layout-props
type Props = MarkdownLayoutProps<{
  // Define frontmatter props here
  title: string;
  author: string;
  math?: boolean;
}>;

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}, url={frontmatter.url} math={frontmatter.math}>
  <header class="post-header">
    <h1 class="post-title" itemprop="name headline">{frontmatter.title}</h1>
  </header>
  <slot /> <!-- your content is injected here -->
</BaseLayout>